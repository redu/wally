# A sample Gemfile
source "https://rubygems.org"

gem "goliath"
gem "grape", :git => "https://github.com/intridea/grape.git"
gem "mongoid", "~> 3.0.0"
gem "roar"
gem 'permit', :git => 'git://github.com/redu/permit-gem.git'
gem 'debugger'

group :test do
  gem "rspec"
  gem 'mongoid-rspec'
  gem 'factory_girl'
  gem 'em-http-request'
  gem 'rack-test', require: "rack/test"
  gem 'webmock'
end
